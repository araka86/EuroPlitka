@using EuroPlitka_Services;
@model EuroPlitka_Model.ViewModels.ProductUserViewModel

<form method="post" id="payment-form">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Order Summary
                    </div>
                    <div class="col-6 text-right">
                        <a asp-action="Index" class="btn btn-outline-info btn-sm">Back to Cart</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">

                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">User Details</span>
                                    </h4>
                                </div>





                                @*---------------------------FullName--------------------------------*@
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="@Model.AplicationUser.FullName" required type="text" class="form-control" />

                                    </div>
                                </div>
                                @*---------------------------PhoneNumber--------------------------------*@


                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="@Model.AplicationUser.PhoneNumber" required type="text" class="form-control" />

                                    </div>
                                </div>



                                @*---------------------------Email--------------------------------*@
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input asp-for="@Model.AplicationUser.Email" required type="text" class="form-control" />

                                    </div>
                                </div>
                                @*---------------------------Adress--------------------------------*@
                                @if (User.IsInRole(WebConstanta.AdminRole))
                                {
                                    @*---------------------------StreetAddress--------------------------------*@
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>StreetAddress</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="@Model.AplicationUser.StreetAddress" required type="text" class="form-control" />

                                        </div>
                                    </div>
                                    @*---------------------------City--------------------------------*@
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>City</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="@Model.AplicationUser.City" type="text" required class="form-control" />

                                        </div>
                                    </div>
                                    @*---------------------------State--------------------------------*@
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>State</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="@Model.AplicationUser.State" required type="text" class="form-control" />

                                        </div>
                                    </div>
                                    @*---------------------------PostalCode--------------------------------*@
                                    <div class="row my-1">
                                        <div class="col-3">
                                            <label>PostalCode</label>
                                        </div>
                                        <div class="col-9">
                                            <input asp-for="@Model.AplicationUser.PostalCode" required type="text" class="form-control" />

                                        </div>
                                    </div>

                                }


                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-sm-between align-items-center mb-3">
                                        <span class="text-info">Summary</span>
                                    </h4>

                                    <ul class="list-group mb-3">
                                        @{
                                            var orderTotal = 0.0;
                                        }
                                        <!--------------свойство товара--------------------->
                                        @for (int i = 0; i < Model.ProductList.Count(); i++)
                                        {
                                            <input type="hidden" asp-for="@Model.ProductList[i].Id" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].Name" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].Price" />
                                            <input type="hidden" asp-for="@Model.ProductList[i].TempSqFt" />

                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@Model.ProductList[i].Name</h6>
                                                    @if (User.IsInRole(WebConstanta.AdminRole))
                                                    {
                                                        <small class="text-muted">Sqft: @Model.ProductList[i].TempSqFt</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">Price per Sqft: @Model.ProductList[i].Price</small>
                                                    }
                                                </div>
                                                @if (User.IsInRole(WebConstanta.AdminRole))
                                                {
                                                    <span class="text-muted">$@(Model.ProductList[i].Price * Model.ProductList[i].TempSqFt)</span>
                                                }
                                            </li>
                                            orderTotal += Model.ProductList[i].Price * Model.ProductList[i].TempSqFt;
                                        }
                                        @if (User.IsInRole(WebConstanta.AdminRole))
                                        {
                                            <li class="list-group-item d-flex justify-content-between bg-light">
                                                <small class="text-info">Total (USD)</small>
                                                <strong class="text-info">$@orderTotal</strong>
                                            </li>
                                        }
                                    </ul>

                                </div>







                            </div>


                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">

                            @if (User.IsInRole(WebConstanta.AdminRole))
                            {
                                <button class="btn btn-success form-control" id="submit-button" onclick="validateInput()">Submit Order</button>
                             
                            }
                            else
                            {

                                <button type="submit" class="btn btn-primary form-control" onclick="validateInput()">Submit Inquiry(User)</button>

                            }



                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />



    <script type="text/javascript">
        function validateInput() {

            var app_name = document.getElementById("AplicationUser_FullName").value;
            var phone = document.getElementById("AplicationUser_PhoneNumber").value;
            var app_email = document.getElementById("AplicationUser_Email").value;


            if (app_name.toString() == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Pleace entar Full Name!',

                })
                return false; //при выводе сообщений sweetAlert нужно возвращать из функции false, тогда данные форм не будут передаватся
            }

            if (phone == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Pleace entar Phone Number!',

                })
                return false;
            }



            if (app_email.toString() == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Pleace entar Email!',

                })
                return false;
            }
            // и эсли валидация форми пройденна успешно, то эти данные могут быть переданны из формы
            return true;
        }


    </script>
}