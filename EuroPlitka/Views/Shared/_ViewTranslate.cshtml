@model EuroPlitka_Model.Europlitkaview
@using EuroPlitka_Model;
@using EuroPlitka_Services;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<tr>
    <td>@Model.Name</td>

    <td width=20% class="text-center">
        <div class="w-75 btn-group" role="group">
            <a asp-controller="Localization" asp-route-Id="@Model.Id" asp-action="UpsertView" class="btn btn-primary mx-2">
                <i class="fa-solid fa-pen-to-square"></i>
            </a>

            <button type="submit" asp-controller="Localization" asp-route-Id="@Model.Id" asp-action="DeleteView" class="btn btn-danger mx-2">
                <i class="fa-solid fa-trash-can"></i>
            </button>
        </div>
    </td>
</tr>


