 <form  method="post" class="row" >
<div class="row mb-4">
    <div class="col">
        <h5>Change password</h5>
    </div>
    <!--end of col-->
</div>
<!--end of row-->
<div class="row">
    <!--end of col-->
    <div class="col-12 col-md-8 order-md-1">

        <div class="col-6">
            <div class="form-group">
                <label asp-for="FullName">Old Password:</label>
                <input asp-for="FullName" type="text" class="form-control form-control-lg" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label asp-for="City">New Password</label>
                <input asp-for="City" type="text" class="form-control form-control-lg" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
       

        <div class="form-group row py-2">
            <div class="col">
                    <button asp-action="ChangePassword" asp-controller="User" asp-route-id="@Model.Id" type="submit" class="btn btn-success w-100">Save changes</button>
            </div>
           
        </div>

    </div>
  
</div>

</form>