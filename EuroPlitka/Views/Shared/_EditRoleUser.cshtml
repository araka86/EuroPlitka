@using Microsoft.AspNetCore.Identity
@model EuroPlitka_Model.ViewModels.UsersVM



<div class="container">


    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <h2>Change role for user @Model.ChangeRoles.UserEmail</h2>
            <div class="media">

                <form asp-action="Edit" method="post">
                    <div class="col-6">
                        <input type="hidden" name="userId" value="@Model.ChangeRoles.UserId" />


                        <div class="form-group">
                            @foreach (IdentityRole role in Model.ChangeRoles.AllRoles)
                            {
                                <input type="radio" name="roles" value="@role.Name"
                                @(Model.ChangeRoles.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />

                                @role.Name <br />
                            }
                        </div>
                    </div>
                    <div class="form-group row py-2">
                        <div class="col">
                            <button asp-controller="Roles" asp-action="Edit" type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>