@model EuroPlitka_Model.Category
<nav aria-label="breadcrumb" role="navigation" class="bg-gray text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"> <a href="/">Головна</a> </li>
                    <li class="breadcrumb-item"><a href="javascript:history.go(-1)">Категорії</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Редагування категорії</li>
                </ol>
            </div>
        </div>
    </div>
</nav>
<form method="post" >
    <input asp-for="Id" hidden />
    <div class="border p-3 bg-white">
        <div class=form-group p-3>
            <h2 class="text-info pl-3">Edit Category</h2>
        </div>
        <div class="row" >
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8" >
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span> 
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-4" >
                        <label asp-for="DisplayOrder" ></label>
                    </div>
                    <div class="col-8" >
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span> 
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">

                        <div class="col" >
                            <input type="submit" class="btn btn-info w-100 " value="Update"/>
                        </div>
                        <div class="col" >
                              <a asp-controller="Category" asp-action="Index" class="btn btn-success  w-100" >
                                  <i class="fa-solid fa-rotate-left"></i>
                                 
                                  </a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-4">
                @*Keep this empty*@
            </div>


        </div>
    </div>
</form>

