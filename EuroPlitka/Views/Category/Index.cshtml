@model IEnumerable<EuroPlitka_Model.Category>



<nav aria-label="breadcrumb" role="navigation" class="bg-gray text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"> <a href="/">Головна</a> </li>                   
                    <li class="breadcrumb-item active" aria-current="page">Категорії</li>
                </ol>
            </div>
        </div>
    </div>
</nav>
<div class="container p-3 bg-white ">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-circle-plus"></i> &nbsp;
                Create New Category
            </a>
        </div>
    </div>



    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped table-hover" style="width:100%">

            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.DisplayOrder</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>

                                </a>
                                <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash-can"></i>

                                </a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>


        </table>

    }
    else
    {
        <p>No category exist!!</p>
    }

</div>

