@model EuroPlitka_Model.ViewModels.NewsProducstHomeVM
@using EuroPlitka_Services;
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{ ViewData["Title"] = "Home Page";}
<div class="text-center">
    <h1 class="display-4">@Localizer["Title"]</h1>
</div>






<div id="resultsTable"></div>
<section class="bg-dark space-lg" data-jarallax data-speed="0.2">
    <img alt="Image" src="/images/mainLogo.jpg" class="bg-image position-absolute opacity-20" />
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-12 col-md-6 col-lg-5 section-intro">
                <h1 class="display-3">Знайди свою плитку для будь чого</h1>
                <span class="lead">
                    У нашому каталозі Ви можете підібрати за потрібними параметрами плитку на будь-який смак з доставкою по всій Україні.
                </span>
            </div>
            <div class="col-12 col-md-6 col-lg-5  ">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <div class="controls">
                        <a class="prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

                    <ol class="carousel-indicators">

                        @foreach (var ind in Model.News)
                        {
                            @if (ind.Id == 2)
                            {
                                <li data-target="" class="active"></li>
                            }
                            else
                            {
                                <li data-target=""></li>
                            }
                        }
                    </ol>


                    <div class="carousel-inner text-center">
                        @foreach (var news in Model.News)
                        {
                          



                            if (news.IsFirst)
                            {
                                <div class="carousel-item active">
                                    <H1>@news.Title</H1>
                                    <div class="benefit-icons">
                                      @if(!string.IsNullOrEmpty(news.LeftSideInfoPicture))
                                      {
                                            <span class="benefit discount">@news.LeftSideInfoPicture</span>
                                      }
                                      @if (!string.IsNullOrEmpty(news.RightSideInfoPicture))
                                      {
                                            <span class="benefit top">@news.RightSideInfoPicture</span>
                                      }

                                       
                                    </div>
                                    <img class="d-block w-100" style="height: 300px;" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(news.Image).ToString())" alt="Second slide">
                                    <i class="dataNews">@news.DateTime.ToShortDateString()</i>
                                     @if (User.IsInRole(WebConstanta.AdminRole))
                                        {
                                            <a asp-controller="News" asp-route-Id="@news.Id" asp-action="Upsert" class="btn btn-primary form-control">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                            </a>
                                        }
                                    <button class="form-control">
                                        <span class="b-footer">
                                            <span class="description">@news.ShortDescription</span>
                                            <span class="button py-2 px-3"> &gt; </span>
                                        </span>
                                    </button>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item text-center">
                                    <H1>@news.Title</H1>
                                    <div class="benefit-icons">
                                        @if (!string.IsNullOrEmpty(news.LeftSideInfoPicture))
                                        {
                                            <span class="benefit discount">@news.LeftSideInfoPicture</span>
                                        }
                                        @if (!string.IsNullOrEmpty(news.RightSideInfoPicture))
                                        {
                                            <span class="benefit top">@news.RightSideInfoPicture</span>
                                        }
                                    </div>
                                    <img class="d-block w-100" style="height: 300px;" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(news.Image).ToString())" alt="Second slide">
                                    <i class="dataNews" >@news.DateTime.ToShortDateString()</i>
                                    @if (User.IsInRole(WebConstanta.AdminRole))
                                    {
                                                        <a asp-controller="News" asp-route-Id="@news.Id" asp-action="Upsert" class="btn btn-primary form-control">
                                                            <i class="fa-solid fa-pen-to-square"></i>
                                                        </a>
                                    }
                                    <button class="form-control">

                                        <span class="b-footer">
                                            <span class="description">@news.ShortDescription</span>
                                            <span class="button py-2 px-3"> &gt; </span>
                                        </span>
                                    </button>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>




<div class="section section-benefits mb-5">
    <div class="container pt-2 pb-2">

    <div class="row">
            <div class="d-flex flex-column flex-sm-row align-items-sm-center mb-2">
                <h5>ТОП продажів</h5>
                <span class="button py-2 px-3"> &nbsp; </span>
                <a href="/CategoryMenu?allResultPage=true">Переглянути всі</a>
                <span class="button py-2 px-3"> &gt; </span>
            </div>
        @foreach (var item in Model.Products)
        {
            <div class="col-lg-3 col-md-3 pt-3">
                <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
                    <div class="card-body px-3 pt-3 pb-1 row">
                        <div class="col-7"><label class="float-left">@item.Name</label></div>
                        <div class="col-5"><label class="float-right"><span class="text-info h6">@string.Format("{0:N0}",item.Price)грн/м2</span></label> </div>
                    </div>
                    <div class="col-12">
                            <img class=" img-height-home rounded w-100 " src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(item.imagebyte).ToString())" alt="Card image cap">
                     </div>
                    <div class="card-body p-1 px-3 row">
                        <div class="col-6 border-0">
                            <span class="badge p-2 border w-100 text-dark" style="background-color:aliceblue">@item.ProductType.Name</span>
                        </div>
                        <div class="col-6 border-0">
                            <span class="badge p-2 border w-100 text-dark" style="background-color:aliceblue">@item.Category.NameUa</span>
                        </div>
                        <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                            <p>@item.shortDesc</p>
                        </div>
                        <div class="col-12 p-1">
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Переглянути</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</div>






