@model IEnumerable<EuroPlitka_Model.ProductType>
<nav aria-label="breadcrumb" role="navigation" class="bg-gray text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"> <a href="/">Головна</a> </li>
                    <li class="breadcrumb-item active" aria-current="page">Тип продукту</li>
                </ol>
            </div>
        </div>
    </div>
</nav>
<div class="container p-3 bg-white">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список типів продукту</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ProductType" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-circle-plus"></i> &nbsp; Створити новий тип продукту</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped table-hover" style="width:100%">
            <thead class="thead-dark " align="center">
                <tr>
                    <th colspan="2">Назва</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>

                        <td width=20% class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ProductType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                                <a asp-controller="ProductType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> ProductType is No exist!!</p>
    }
</div>