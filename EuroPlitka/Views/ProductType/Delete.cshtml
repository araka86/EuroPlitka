@model EuroPlitka_Model.ProductType
<nav aria-label="breadcrumb" role="navigation" class="bg-gray text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"> <a href="/">Головна</a> </li>
                    <li class="breadcrumb-item"><a href="javascript:history.go(-1)">Керування типу продукту</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Видалення типу продукту</li>
                </ol>
            </div>
        </div>
    </div>
</nav>

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 bg-white">
        <div class=form-group p-3>
            <h2 class="text-info pl-3">Видалення типу продукту</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4"> <label asp-for="Name"></label> </div>
                    <div class="col-8"><input asp-for="Name" disabled class="form-control" /></div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100 " value="Видалити" />
                        </div>
                        <div class="col">
                            <a href="javascript:history.go(-1)" class="btn btn-success  w-100"><i class="fa-solid fa-rotate-left"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*Keep this empty*@
            </div>


        </div>
    </div>
</form>

