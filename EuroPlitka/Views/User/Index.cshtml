@using EuroPlitka_Model
@using EuroPlitka_Services;
@model List<EuroPlitka_Model.AplicationUser>


<section class="flush-with-above">
    <div class="container">
        <div class="row">
            <div class="col">
                <table class="table table-hover align-items-center table-borderless">
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr class="bg-white">
                                <th scope="row">
                                    <div class="media align-items-center">
                                        @{

                                            var img = user.imgUserAva == null ?
                                            "/images/avatar-male-3.jpg" :
                                            $"{string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(user.imgUserAva).ToString())}";

                                            var role = User.IsInRole(WebConstanta.AdminRole) ? "Admin" : "Customer";
                                          
                                        }

                                        <img alt="Image profile avatar" src="@img" class="avatar">
                                        <div class="media-body">
                                            <span class="h6 mb-0">@user.UserName</span>
                                        </div>
                                    </div>
                                </th>
                                <td>
                                    <a class="btn btn-outline-primary" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id">
                                        View Profile
                                    </a>
                                </td>


                                <td>@user.FullName </td>
                                <td>@role</td>

                            </tr>
                            <tr class="table-divider">
                                <th></th>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
