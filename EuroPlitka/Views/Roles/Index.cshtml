@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>



<div class="container p-md-3 table-responsive-md bg-white">



    <div class="row pt-md-4">
        <div class="row pt-md-4">
            <div class="col-md-6">
                <h2 class="text-primary">Role List</h2>
            </div>

            <div class="col-md-6 text-right">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    <i class="fa-solid fa-circle-plus"></i> &nbsp;
                    Create New Role
                </a>
            </div>
        </div>


        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Role Name</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td width="80%">@role.Name</td>
                        <td class="text-center">
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="Roles" asp-route-id="@role.Id" asp-action="EditRole" class="btn btn-primary mx-2">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <button type="submit" class="btn btn-danger mx-2">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
