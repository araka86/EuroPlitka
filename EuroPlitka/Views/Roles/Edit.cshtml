@using Microsoft.AspNetCore.Identity
@model EuroPlitka_Model.ViewModels.ChangeRoleViewModel



<div class="container">

   
    <div class="row justify-content-center">
        <div class="col-12 col-md-8">
            <h2>Изменение ролей для пользователя @Model.UserEmail</h2>
            <div class="media">
               
                <form asp-action="Edit" method="post">
                    <input type="hidden" name="userId" value="@Model.UserId" />
                    <div class="form-group">
                        @foreach (IdentityRole role in Model.AllRoles)
                        {
                            <input type="radio" name="roles" value="@role.Name"
                            @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />

                            @role.Name <br />
                        }
                    </div>
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                </form>
            </div>
        </div>
    </div>
</div>