@model EuroPlitka_Model.Pagefille
@using EuroPlitka_Services
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var title = "Create";
}
<nav aria-label="breadcrumb" role="navigation" class="bg-gray text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"> <a href="/">Головна</a> </li>
                    <li class="breadcrumb-item"><a href="javascript:history.go(-1)">Керування Pagefille</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Створення Pagefille</li>
                </ol>
            </div>
        </div>
    </div>
</nav>
<form method="post">
    @if (Model.Id != 0)
    {
        title = "Update";
        <input asp-for="Id" />
    }
    <div class="border p-3 bg-white">
        <div class=form-group p-3>
            <h2 class="text-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4"> <label asp-for="Filename"></label></div>
                    <div class="col-8">
                        <input asp-for="Filename" class="form-control" />
                        <span asp-validation-for="Filename" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row py-2">
                    <div class="col-8 offset-4 row ">
                        <div class="col" mt-1>
                            <input type="submit" class="btn btn-info w-100 " value="Створити" />
                        </div>
                        <div class="col" mt-1>
                            <a asp-controller="Localization" asp-action="IndexPageFile" class="btn btn-success  w-100"><i class="fa-solid fa-rotate-left"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

