@using EuroPlitka_Services;
@model EuroPlitka_Model.ViewModels.LoginRegistrViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@inject IHtmlLocalizer<SharedResource> SharedLocalizer



<nav aria-label="breadcrumb" role="navigation" class="bg-gray text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"> <a href="/">Головна</a> </li>
                    <li class="breadcrumb-item active" aria-current="page">Вхід до облікового запису</li>
                </ol>
            </div>
        </div>
    </div>
</nav>
<div id="logreg-forms">
 
    <h1 class="h3 mb-3 font-weight-normal text-info pt-4" style="text-align:center;">@Localizer["Sing in account"]</h1>
    <form asp-controller="Account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
        <div class="h3 mb-3">
            <input asp-for="Email" placeholder="@Localizer["email..."]" type="email" class="mb-1 form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Password" placeholder="@Localizer["password..."]" type="password" id="input01" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>

            <input asp-for="ConfirmPassword" placeholder="@Localizer["ConfirmPassword..."]" type="password" id="input02" class="form-control" hidden />
        </div>
        <button type="submit" class="btn btn-success form-control rounded btn_save"><i class="fas fa-sign-out "></i>@Localizer["Sing in"]</button>
        <div>
            <label>@Localizer["RememberMe"]</label><br />
            <input asp-for="RememberMe" />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $('.btn_save').click(function() {
            var input01 = $("#input01").val();
            $("#input02").val(input01);
        });
    </script>
}