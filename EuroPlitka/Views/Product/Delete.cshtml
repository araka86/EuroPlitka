@model EuroPlitka_Model.Product
@using EuroPlitka_Services
<nav aria-label="breadcrumb" role="navigation" class="bg-gray text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"> <a href="/">Головна</a> </li>
                    <li class="breadcrumb-item"><a href="javascript:history.go(-1)">Керування продукту</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Видалення продукту</li>
                </ol>
            </div>
        </div>
    </div>
</nav>
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 bg-white">
        <div class=form-group p-3>
            <h2 class="text-info pl-3">Видалення продукту</h2> 
        </div>

        <div class="row">
            <div class="col-md-8">
                @*---------> Name <---------*@
                <div class="form-group row py-2">
                    <div class="col-md-4"><label>Назва</label></div>
                    <div class="col-md-8"><input asp-for="Name" disabled class="form-control" /></div>
                </div>
                @*---------> CategoryList (DropDouwn) <---------*@
                <div class="form-group row py-2">
                    <div class="col-md-4"> <label>Категорія</label></div>
                    <div class="col-md-8">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>
                </div>
                @*---------> ApplicationListId (DropDouwn) <---------*@
                <div class="form-group row py-2">
                    <div class="col-md-4"><label>Тип продукту</label></div>
                    <div class="col-md-8">
                        <input asp-for="ProductType.Name" disabled class="form-control" />
                    </div>
                </div>
                @*---------> Description <---------*@
                <div class="form-group row py-2">
                    <div class="col-md-4"> <label>Опис</label></div>
                    <div class="col-md-8">
                        <textarea asp-for="Description" readonly disabled class="form-control summernote"></textarea>
                    </div>
                </div>
                @*---------> Price <---------*@

                <div class="form-group row py-2">
                    <div class="col-md-4"><label>Ціна</label></div>
                    <div class="col-md-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>


                @*---------> Button <---------*@
                <div class="form-group row py-2">
                    <div class="col-md-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100 ">Видалити</button>
                        </div>
                        <div class="col">
                            <a href="javascript:history.go(-1)" class="btn btn-success  w-100">
                                <i class="fa-solid fa-rotate-left"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 ">
                <img src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.imagebyte).ToString())" class="w-100" style="border-radius:15px; border:1px solid #bbb; " />
                @*Keep this empty*@
            </div>
        </div>
    </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable: true,
            });
        });
    </script>
}


