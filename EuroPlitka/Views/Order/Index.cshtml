@using EuroPlitka_Services
@model EuroPlitka_Model.ViewModels.OrderListVm
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<nav aria-label="breadcrumb" role="navigation" class="bg-gray text-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="/">Головна</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Manage History Order</li>
                </ol>
            </div>
        </div>
    </div>
</nav>
<form method="post">
    <div class="container p-4 my-3">
        <h5 class="text-info">@Localizer["OrderIndexFiltr"]</h5>
        <div class="border bg-white p-3" style="border-radius:15px;">
            <div class="row">
                <div class="col-12">
                    <div class="row" style="padding-top:10px;">
                        <div class="col-4">
                            @Html.Editor("searchName", new{htmlAttributes = new{@class="form-control",@placeholder=@Localizer["OrderIndexFiltrName"].Value}})
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchEmail", new{htmlAttributes = new{@class="form-control",@placeholder=@Localizer["OrderIndexFiltrMail"].Value}})
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchPhone", new{htmlAttributes = new{@class="form-control",@placeholder=@Localizer["OrderIndexFiltrPhone"].Value}})
                        </div>
                    </div>
                    <div class="row pt-1">
                        <div class="col-4  ">
                        </div>
                        <div class="col-4  ">
                            <button type="submit" class="h-100 btn btn-info form-control">
                                <i class="fas fa-search"></i>@Localizer["OrderIndexFiltrsBtnSrch"]
                            </button>
                        </div>
                        <div class="col-4">
                            <input type="submit" class="btn btn-danger btn_reset" asp-for="IsReset" value="@Localizer["OrderIndexFiltrBtnRst"].Value" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />




<div class=" bg-white p-3 ">


    <ejs-grid id="Grid" dataSource="@Model.OrderHeaderList" owHeight="38" allowFiltering="true" allowSorting="true" allowPaging="true">
        <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
        <e-grid-pagesettings pageSize="6"></e-grid-pagesettings> <!-- кол-тво елементов на странице -->
        <e-grid-columns>

            <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="100"></e-grid-column>

            <e-grid-column field="FullName" headerText="@Localizer["OrderIndexName"].Value" textAlign="Right" width="100"></e-grid-column>
            <e-grid-column field="Email" headerText="@Localizer["OrderIndexMaill"].Value" textAlign="Right" width="100"></e-grid-column>
            <e-grid-column field="PhoneNumber" headerText="@Localizer["OrderIndexPhone"].Value" textAlign="Right" width="100"></e-grid-column>
            <e-grid-column field="СountItem" headerText="@Localizer["OrderIndexCountitem"].Value" textAlign="Right" width="100"></e-grid-column>
            <e-grid-column field="OrderDate" headerText="@Localizer["OrderIndexOrderDate"].Value" customFormat="@(new {type="date", format="MM/dd/yyyy"})" textAlign="Right" width="100"></e-grid-column>
            <e-grid-column field="Id" headerText="" width="70"
                           template="<a rel'nofollow' href='Order/Details/${Id}' class='btn btn-primary'> <i class='fas fa-list'></i> </a>"></e-grid-column>
        </e-grid-columns>
    </ejs-grid>



</div>